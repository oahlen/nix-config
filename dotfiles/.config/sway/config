mode "resize" {
  bindsym Down resize grow height 32 px
  bindsym Escape mode default
  bindsym Left resize shrink width 32 px
  bindsym Return mode default
  bindsym Right resize grow width 32 px
  bindsym Up resize shrink height 32 px
  bindsym h resize shrink width 32 px
  bindsym j resize grow height 32 px
  bindsym k resize shrink height 32 px
  bindsym l resize grow width 32 px
}

gaps inner 10

